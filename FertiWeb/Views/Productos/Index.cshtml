@model IEnumerable<FertiWeb.Models.tblProducto>

@{
    ViewBag.Title = "Index";
}

<h2>Productos Ingresados</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Precio
        </th>
        <th>
            Empresa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precioProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblEmpresa.nombreEmp)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idProducto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idProducto })
        </td>
    </tr>
}

</table>
